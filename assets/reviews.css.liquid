.reviews-container {
  max-width: 1200px;
  margin: auto;
  padding: 64px 10px 38px;
  display: grid;
  grid-template-columns: repeat(3, minmax(350px, 400px));
  grid-template-rows: 1fr 1fr;
  grid-gap: 30px;
}

.review {
  min-width: 300px;
  border: 1px solid lightgray;
  padding: 20px;
  text-align: center;
}

@media(max-width:1160px) {
  .reviews-container {
    display: flex;
    gap: 20px;
    padding: 64px 64px 38px;
    overflow: auto;
    scroll-snap-type: x mandatory;
  }

  .review {
    scroll-snap-align: start;
  }
}

.author {
  font-family: 'AlternateGotNo3D';
  font-size: 24px;
  margin-bottom: 10px;
}

.star {
  color: #D7A55B;
  margin-bottom: 22px;
}

.content {
  font-family: 'DM Sans';
  font-size: 16px;
  line-height: 32px;
  color: #1d1d1d;
}