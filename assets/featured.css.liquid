.featured-container {
  padding-top: 64px;
}

.heading-featured {
  font-family: 'Alternate Gothic Cond ATF';
  font-size: 16px;
  line-height: 26px;
  letter-spacing: 0.2px;
  text-align: left;
}

.featured {
  width: 100%;
  display: flex;
  gap: 20px;
  margin: 20px 0;
}

.featured img {
  max-width: 220px;
}

@media only screen and (min-width: 768px) {
  .featured-container {
    max-width: 800px;
    margin: auto;
  }

  .heading-featured {
    font-size: 80px;
    font-weight: bold;
    text-align: center;
    line-height: 90px;
    margin-bottom: 2.5rem;
  }

  .featured {
    display: flex;
    justify-content: center;
    gap: 2.5rem;
  }

  .featured img {
    max-width: 220px;
    margin: 0 auto;
  }
}
