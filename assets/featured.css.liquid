.featured-container {
  padding: 64px 0;
}

.heading-featured {
  font-family: 'Alternate Gothic Cond ATF';
  font-size: 48px;
  letter-spacing: 0.2px;
  text-align: center;
  margin-bottom: 1.5rem;
}

.featured {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 20px;
  align-items: center;
}

.featured img {
  max-width: 220px;
}

@media only screen and (min-width: 768px) {
  .featured-container {
    max-width: 800px;
    margin: auto;
  }

  .heading-featured {
    margin-bottom: 2.5rem;
  }

  .featured {
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 2.5rem;
  }

  .featured img {
    max-width: 220px;
    margin: 0 auto;
  }
}