/* Cart drawer  */
.backdrop {
  background-color: rgba(1, 1, 1, 0.5);
  position: fixed;
  inset: 0;
  z-index: 100;
  display: none;
  opacity: 0;
  transition: all 0.5s ease;
}

.backdrop.show {
  display: block;
  opacity: 1;
}

.cart-drawer {
  width: 450px;
  height: 95vh;
  padding: 10px 20px;
  border-radius: 12px;
  background-color: rgb(220, 220, 220);
  box-shadow: -10px 0 15px rgba(1, 1, 1, 0.5);
  position: fixed;
  top: 20px;
  right: 20px;
  z-index: 999;
  transform: translateX(130%);
  transition: transform 0.5s ease-in-out;
}

.open {
  transform: translateX(0);
}

.cart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 0 6px;
  border-bottom: 1px solid black;
  margin-bottom: 20px;
}

.cart-heading {
  font-size: 22px;
  font-family: 'Alternate Gothic Cond ATF';
  letter-spacing: 1.80px;
}

.close-btn {
  cursor: pointer;
}


.cart-drawer-empty {
  text-align: center;
  color: #212529;
}

.cart-item {
  width: 100%;
  margin: 10px auto;
  background-color: white;
  border-radius: 8px;
  padding: 20px 8px;
  border: 1px solid rgb(220, 220, 220);
  display: flex;
  justify-content: space-between;
}

.cart-details {
  flex-basis: 70%;
}

.cart-product-title {
  font-family: 'AlternateGotNo3D';
  font-size: 32px;
  color: var(--clr-theme);
  margin-bottom: 16px;
  text-align: center;
}

.cart-img {
  flex-basis: 30%;
  width: 100%;
  max-height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20px;
}

.cart-item-title {
  font-family: 'AlternateGotNo3D';
  font-size: 22px;
  color: var(--clr-theme);
  margin-bottom: 16px;
}

.item-type {
  font-size: 16px;
  font-family: 'AlternateGotNo3D';
  margin-bottom: 12px;
}


@media(max-width: 490px) {

  .cart-drawer {
    height: auto;
    top: 0;
    right: 0;
    margin: 0 10px;
    height: fit-content;
    min-height: 50vh;
    width: fit-content;
    min-width: 300px;
  }

  .cart-img {
    flex-basis: 25%;
  }

  .cart-details {
    flex-basis: 75%;
  }

  .cart-item {
    padding: 5px 5px;
  }
}

/* cart footer */
.cart-drawer-footer {
  padding: 24px 0;
  margin-top: auto;
  border-top: 1px solid #e7e7e7;
}

.cart-drawer-footer-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10px;
}

.subtotal, .cart-final-price {
  font-size: 24px;
  font-family: "AlternateGotNo3D";
  color: var(--clr-theme);
}

.cart-drawer-footer-row:last-of-type {
  margin-bottom: 16px;
}

.cart-drawer-button {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 48px;
  color: white;
  font-family: "DM Sans";
  font-size: 18px;
  font-family: 'DM Sans';
  font-weight: 500;
  letter-spacing: 0.72px;
  background-color: var(--clr-theme);
  border: none;
  cursor: pointer;
}