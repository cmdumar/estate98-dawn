.recipe-detail-container {
    max-width: 1200px;
    margin: 80px auto 0;
}

.recipe-left h2 {
    font-family: 'AlternateGotNo3D';
    font-size: 44px;
    color: var(--clr-theme);
    margin-bottom: 16px;
}

.recipe-detail-container li {
    margin-bottom: 14px;
    line-height: 32px;
}

.recipe-detail-container ol {
    padding-left: 18px;
}

.recipe-flex {
    display: flex;
    justify-content: space-around;
    margin-top: 80px;
}

.recipe-left {
    max-width: 525px;
    max-height: 700px;
}

.recipe-right {
    justify-self: end;
}

.recipe-flex li span {
    font-family: 'DM Sans';
    font-weight: 400;
    letter-spacing: 0.80px;
}

@media(max-width:1080px) {
    .recipes-grid {
        grid-template-columns: 1fr 1fr;
    }
    .recipe-flex {
        flex-direction: column-reverse;
        align-items: center;
        gap: 40px;
    }
}

@media(max-width: 740px) {
    .recipes-grid {
        grid-template-columns: 1fr;
    }

    .recipe-detail-container {
        margin-top: 10px;
    }

    .recipe-flex {
        margin-top: 0;
    }
}
