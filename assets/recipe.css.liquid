.recipes {
  max-width: 1200px;
  padding: 24px 24px 64px;
  display: flex;
  gap: 10px;
  margin: auto;
  overflow: auto;
  scroll-snap-type: x mandatory;
  scrollbar-width: none;
}

.recipe {
  min-width: 280px;
  min-height: 320px;
  background-size: cover;
  background-position: bottom;
  flex-shrink: 0;
  scroll-snap-align: start;
  position: relative;
}

.recipe p {
  width: 100%;
  position: absolute;
  color: white;
  text-align: center;
  bottom: 0;
  font-family: 'AlternateGotNo3D';
  font-size: 24px;
  line-height: 34px;
  padding-bottom: 4px;
}

.recipe div {
  width: 100%;
  position: absolute;
  bottom: 0;
  background-color: rgba(1, 1, 1, 0.7);
  height: 40px;
}

.mt-48 {
  margin-top: 48px;
}

.recipe-1 {
  background-image: url("{{ 'hotcoffee.jpeg' | asset_url }}");
}

.recipe-2 {
  background-image: url("{{ 'icedcoffee.jpeg' | asset_url }}");
}

.recipe-3 {
  background-image: url("{{ 'icedlatte.jpeg' | asset_url }}");
}

.recipe-4 {
  background-image: url("{{ 'affogato.jpeg' | asset_url }}");
}

/* this is just to make the card centered 
to make use of the min-width on parent div */

.hidden-text {
  visibility: hidden;
}