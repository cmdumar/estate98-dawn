.story-hero {
  width: 100vw;
  height: 80vh;
  background-image: url("{{ 'footer.jpeg' | asset_url }}");
  background-size: cover;
  background-position: 60%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 60px;
  position: relative;
}

.z-2 {
  position: relative;
  z-index: 2;
}

.santa-title {
  font-family: 'Alternate Gothic Cond ATF';
  text-transform: uppercase;
  word-spacing: 8px;
  font-size: 80px;
  line-height: 1.2;
  text-align: left;
  align-self: start;
}

.esencia-3 {
  max-height: 600px;
  margin-left: 60px;
}

.p-center {
  font-size: 16px;
  line-height: 32px;
  letter-spacing: 0.80px;
  text-align: center;
  max-width: 1200px;
  margin: 60px auto 80px;
}

@media(max-width: 1240px) {
  .santa-title {
    text-align: center;
  }

  .esencia-3 {
    margin-left: 0;
    max-height: 450px;
  }

  .mb-20 {
    margin-bottom: 20px;
  }

  .manuel-padding {
    padding-right: 12%;
  }
}

@media(min-width: 1241px) {
  .align-start {
    align-self: start;
  }
}