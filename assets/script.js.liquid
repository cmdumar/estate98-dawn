// navbar mobile menu

mblMenu = document.querySelector('.mbl-menu')
logo = document.querySelector('.logo')

mblMenu.onclick = () => {
    nav = document.querySelector('.nav')
    nav.classList.toggle('show-mbl-menu')
    logo.classList.toggle('show-white-logo')
    mblMenu.classList.toggle('active')
}

const videoElement = document.getElementById('background-video')

videoElement.addEventListener('suspend', () => {
        document.querySelector('.hero-content').style.zIndex = '-2'
        videoElement.removeAttribute('controls');
        document.querySelector('.hero').style.backgroundImage = "url("{{ 'hero-poster.png' | asset_url }}")"
});

