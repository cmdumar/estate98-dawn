.generations-container {
  width: 100vw;
  min-height: 100vh;
  background-image: url("{{ 'generations.jpeg' | asset_url }}");
  background-size: cover;
  background-position: bottom;;
  position: relative;
  margin-bottom: 60px;
  position: relative;
}

.overlay {
  width: 100%;
  height: 100%;
  position: absolute;
  inset: 0;
  z-index: 1;
  background-color: rgba(1,1,1,0.5);

}

.generations-content {
  position: absolute;
  width: 85%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 40px;
  margin: auto;
  z-index: 2;
}

.generations-title {
  font-family: 'AlternateGotNo1D';
  font-size: 100px;
  line-height: 100px;
  color: white;
  text-align: left;
}

.logo3 {
  max-width: 278px;
  height: auto;
}


.logo3 img {
  width: 100%;
  height: 100%;
} 

@media(min-width: 1540px) {
  
  .generations-title {
    font-size: 110px;
    line-height: 110px;
  }

}


@media(max-width: 1131px) {

  .logo3 {
    max-width: 240px;
    height: auto;
  }

  .generations-title {
    font-size: 84px;
    line-height: 84px;
  }

}

@media(max-width: 1020px) {
  .generations-content {
    flex-direction: column;
    align-items: center;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .generations-title {
    text-align: center;
  }
}

@media(max-width: 490px) {
  .generations-title {
    font-size: 72px;
    line-height: 72px;
    text-align: center;
    padding-top: 20px;
  }
  .generations-content {
    gap: 0;
  }

  .generations-container {
    height: 70vh;
  }

