.generations-container {
  width: 100vw;
  height: 100vh;
  background-image: url("{{ 'generations.jpeg' | asset_url }}");
  background-size: cover;
  background-position: top;
  position: relative;
  margin-bottom: 60px;
}

.generations-content {
  position: absolute;
  max-width: 800px;
  top: 50%;
  left: 20%;
  display: flex;
  gap: 30px;
}

.generations-title {
  font-family: 'Alternate Gothic Cond ATF';
  font-size: 72px;
  color: white;
  line-height: 1.2;
  text-align: left;
  align-self: end;
  padding-bottom: 10px;
  flex-basis: 70%
}

.logo3 {
  flex-basis: 30%;
}

@media(max-width: 920px) {
  .generations-content {
    flex-direction: column;
    align-items: center;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
}

@media(max-width: 490px) {
  .generations-title {
    font-size: 36px;
    text-align: center;
  }

  .generations-container {
    height: 70vh;
  }

  .logo3 {
    width: 180px;
  }
}