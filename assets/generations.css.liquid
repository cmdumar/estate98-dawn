.generations-container {
  width: 100vw;
  min-height: 100vh;
  background-image: url("{{ 'generations.jpeg' | asset_url }}");
  background-size: cover;
  background-position: top;
  position: relative;
  margin-bottom: 60px;
  position: relative;
}

.overlay {
  width: 100%;
  height: 100%;
  position: absolute;
  inset: 0;
  z-index: 1;
  background-color: rgba(1,1,1,0.5);

}

.generations-content {
  position: absolute;
  width: 85%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 40px;
  margin: auto;
  z-index: 2;
}

.generations-title {
  font-family: 'AlternateGotNo1D';
  font-size: 80px;
  line-height: 80px;
  color: white;
  text-align: left;
  /* align-self: end; */
}

.logo3 {
  width: 380px;
  min-height: 240px;
}

.logo3 img {
  width: 100%;
  height: 100%;
}

@media(min-width: 1736px) {
  .generations-container {
    min-height: 80vh;
  }

  .generations-title {
    font-size: 110px;
    line-height: 110px;
  }

  .logo3 {
    width: 500px;
  }
}


@media(max-width: 1306px) {

  /* .logo3 {
    align-self: center;
  } */

  .generations-title {
    font-size: 62px;
    line-height: 62px;
  }
  .logo3 {
    max-width: 280px;
    height: auto;
  }

}

@media(max-width: 1020px) {
  .generations-content {
    flex-direction: column;
    align-items: center;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .generations-title {
    text-align: center;
  }
}

@media(max-width: 490px) {
  .generations-title {
    font-size: 40px;
    line-height: 40px;
    text-align: center;
  }
  .generations-content {
    gap: 0;
  }

  .generations-container {
    height: 70vh;
  }

  .logo3 {
    max-width: 180px;
  }
}