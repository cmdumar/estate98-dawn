.footer {
  background-image: url("{{ 'footer.jpeg' | asset_url }}");
  width: 100vw;
  padding-top: 60px;
}

.join {
  max-width: 1000px;
  min-height: 270px;
  margin: 140px auto;
  padding: 40px 120px 70px;
  background-image: url("{{ 'background-main.jpeg' | asset_url }}");
  background-size: contain;
}

.theme-clr {
  color: var(--clr-theme);
}

.subscribe-form {
  display: flex;
  max-width: 100%;
  justify-content: center;
  position: relative;
}

.join input {
  width: 100%;
  min-height: 60px;
  border-radius: 6px;
  padding: 12px;
}

.btn {
  border: none;
  position: absolute;
  right: 16px;
  top: 30%;
  font-size: 16px;
  border-left: 1px solid gray;
  padding-left: 16px;
  height: 50%;
  cursor: pointer;
  background-color: transparent;
}

.footer-2 {
  width: 100%;
  background-color: black;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 60px;
}

.socials {
  display: flex;
  gap: 16px;
}

.socials a img {
  transition: transform 0.5s;
}

.socials a img:hover {
  transform: scale(1.1);
}

@media(max-width: 1040px) {
  .join {
    width: 85vw;
  }
}

@media(max-width: 762px) {
  .join {
    padding: 18px;
  }

  .btn {
    border: 1px solid black;
    position: static;
    font-size: 16px;
    padding: 8px 12px;
    border-radius: 4px;
    background-color: white;
  }

  .subscribe-form {
    flex-direction: column;
    align-items: center;
    gap: 10px;
  }

  /* .footer-2 {
    flex-direction: column;
    justify-content: center;
    gap: 12px;
  } */

  .socials {
    flex-direction: column;
  }

  .footer-2 {
    padding: 20px;
  }
}