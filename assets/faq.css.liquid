.faq-container {
  max-width: 1000px;
  margin: auto;
  padding: 48px 12px 64px;;
}

.align-left {
  text-align: left;
}

.faq li {
  list-style: none;
  margin-bottom: 16px;
  padding-bottom: 12px;
  border-bottom: 1px solid black;
}

.faq li label {
  font-size: 16px;
  font-family: 'DM Sans';
  font-weight: 700;
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
}

.content-faq {
  padding-top: 24px;
  line-height: 24px;
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.7s;
}

.content-faq a {
  color: var(--clr-theme)
}

#accordion label + input[type="radio"] {
  display: none;
}

#accordion label + input[type="radio"]:checked + .content-faq {
  max-height: 440px;
}