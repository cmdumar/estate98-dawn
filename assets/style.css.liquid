/* flex  - image and text */

.flex-text-first,
.flex-image-first {
  max-width: 1200px;
  display: flex;
  margin: 50px auto 100px;
  justify-content: center;
  align-items: center;
  gap: 30px;
}

.flex-content-left,
.flex-content-right,
.flex-image-first {
  flex-basis: 50%;
}

.align-self-start {
  align-self: start;
}

.flex-image {
  max-width: 600px;
  height: auto;
}

.flex-image2 {
  max-width: 460px;
  padding-top: 30px;
  margin-bottom: 30px;
}

.pr-60 {
  padding-right: 60px;
}

.pl-60 {
  padding-left: 60px;
}

.pl-100 {
  padding-left: 100px !important;
}

.line-height-32 {
  line-height: 32px;
}

.flex-image img {
  object-fit: cover;
  max-width: 100%;
}

.flex-content-left {
  padding-right: 50px;
}

.flex-content-right {
  padding-left: 50px;
}

.heading-short {
  width: max-content;
}

.heading-mbl {
  display: none;
}

.flex-content p,
.flex-content-left p,
.flex-content-right p {
  font-size: 16px;
  line-height: 32px;
  letter-spacing: 0.80px;
}

.bellarina {
  font-family: 'Bellarina' !important;
  font-size: 60px;
  color: var(--clr-theme);
  letter-spacing: 1.40px;
  text-align: center;
}

.heading-secondary {
  font-family: 'AlternateGotNo3D';
  font-size: 44px;
  color: var(--clr-theme);
  margin-bottom: 16px;
  line-height: 44px;
}

.flex-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

@media(max-width: 1240px) {
  .flex-text-first,
  .flex-image-first {
    justify-content: center;
    align-items: center;
    max-width: 800px;
    text-align: center;
    margin: 30px auto 50px;
  }

  .pr-60 {
    padding-right: initial;
  }
  
  .pl-60 {
    padding-left: initial;
  }

  .pl-100 {
    padding-left: initial !important;
  }


  .center {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .heading-secondary {
    text-align: center;
  }

  .hide-title {
    display: none;
  }

  .flex-text-first {
    flex-direction: column-reverse;
  }

  .flex-image-first {
    flex-direction: column;
  }

  .flex-content-right,
  .flex-content-left {
    padding: 0;
  }

  .flex-image {
    max-width: 800px;
  }

  .flex-content h1 {
    display: none;
  }

  .heading-mbl {
    display: block;
    margin-top: 50px;
  }

  .column {
    flex-direction: column;
  }

  .column-reverse {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column-reverse;
  }

  .bellarina {
    line-height: 1;
    margin-bottom: 12px;
  }
}

@media(min-width: 1241px) {
  .max-h-100 {
    max-height: 100vh;
  }
}

