@import url('https://fonts.googleapis.com/css2?family=DM+Sans:opsz@9..40&family=Gothic+A1:wght@700&display=swap');

:root {
  --clr-theme: #a32b2a;
}
/* Box sizing rules */
*,
*::before,
*::after {
  box-sizing: border-box;
}

/* Remove default margin */
* {
  margin: 0;
  padding: 0;
  font: inherit;
}

@font-face {
  font-family: 'Alternate Gothic Cond ATF';
  src: url('./AlternateGothicCondATF-Bold.woff2') format('woff2'),
      url('./AlternateGothicCondATF-Bold.woff') format('woff');
  font-weight: bold;
  font-style: normal;
  font-display: swap;
}

/* Remove list styles on ul, ol elements with a list role, which suggests default styling will be removed */
ul[role="list"],
ol[role="list"] {
  list-style: none;
}

/* Set core root defaults */
html:focus-within {
  scroll-behavior: smooth;
}

html,
body {
  height: 100%;
  background-repeat: repeat;
  background-size: contain;
  background-image: url("{{ 'body-bg.jpeg.jpeg' | asset_url }}");
}
/* Set core body defaults */
body {
  text-rendering: optimizeSpeed;
}

/* A elements that don't have a class get default styles */
a:not([class]) {
  text-decoration-skip-ink: auto;
}

/* Make images easier to work with */
img,
picture,
svg {
  max-width: 100%;
  display: block;
}

.container {
  padding: 0 30px;
}

/* Remove all animations, transitions and smooth scroll for people that prefer not to see them */
@media (prefers-reduced-motion: reduce) {
  html:focus-within {
    scroll-behavior: auto;
  }

  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
    scroll-behavior: auto !important;
  }
}

.heading-primary {
  font-size: 48px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 1.5rem;
}

@media (max-width: 768px) {
  .heading-primary {
    font-size: 38px;
  }
}
