/* @import url('https://fonts.googleapis.com/css2?family=DM + Sans:opsz@9..40 &family=Gothic + A1:wght@700&display=swap'); */:root {
  --clr-theme: #a32b2a;
}

/* Box sizing rules */
*,
*::before,
*::after {
  box-sizing: border-box;
}

/* Remove default margin */
* {
  margin: 0;
  padding: 0;
  font: inherit;
}

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

/* Firefox */
input[type=number] {
  -moz-appearance: textfield;
}

