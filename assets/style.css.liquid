  src: url('./AlternateGotNo3dRegular.woff2') format('woff2'), url('./AlternateGotNo3dRegular.woff') format('woff');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'AlternateGotNo1D';
  src: url('./AlternateGotNo1dRegular.woff2') format('woff2'), url('./AlternateGotNo1dRegular.woff') format('woff');
