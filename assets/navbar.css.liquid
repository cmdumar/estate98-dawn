} */

.mbl-menu {
  cursor: pointer;
  display: none;
}

.mbl-menu > * {
  width: 24px;
  height: 4px;
  border-radius: 8px;
  margin-bottom: 4px;
}

.bar-black {
  background-color: black;
}

.bar-white {
  background-color: white;
}

@media(max-width: 740px) {
  .navbar {
    padding: 0 30px;  
  }

  .mbl-menu {
    display: block;
  }

  .logo.show-white-logo .logo-white-mbl {
    display: block;
  }

  .logo.show-white-logo .logo-black-mbl {
    display: none;
  }

  .nav {
    position: absolute;
    inset: 0;
    width: 100vw;
    height: 0;
    background-color: black;
    /* background-color: rgba(1, 1, 1, 0.8); */
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: 0.5s;
    opacity: 0;
    overflow: hidden;
    z-index: 1;
  }

  .nav-item {
    padding-left: 0px;
  }

  .nav-item:last-of-type {
    margin-bottom:  60px;
  }


  .nav.show-mbl-menu {
    height: 100vh;
    opacity: 1;
  }

  .mbl-menu {
    z-index: 2;
  }

  .mbl-menu> * {
    transition: 0.5s;
  }

  .mbl-menu.active .bar-black:first-of-type {
    background-color: white;
    transform: translateY(8px) rotate(45deg);
  }

  .mbl-menu.active .bar-black:last-of-type {
    background-color: white;
    transform: translateY(-8px) rotate(-45deg);
  }

  .mbl-menu.active .bar-black:nth-of-type(2) {
    background-color: white;
    opacity: 0;
  }
  
  .mbl-menu.active .bar-white:first-of-type{
    transform: translateY(8px) rotate(45deg)
  }

  .mbl-menu.active .bar-white:last-of-type{
    transform: translateY(-8px) rotate(-45deg)
  }

  .mbl-menu.active .bar-white:nth-of-type(2){
    opacity: 0;
  }

  .logo {
    width: 105px;
    position: relative;
    z-index: 2;
  }

  .nav-item a {
    font-size: 32px;
    color: white;
  }
}

