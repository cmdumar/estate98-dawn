.mbl-menu {
  cursor: pointer;
  display: none;
}

.mbl-menu > * {
  width: 24px;
  height: 4px;
  border-radius: 8px;
  margin-bottom: 4px;
}

.bar-black {
  background-color: black;
}

.bar-white {
  background-color: white;
}

@media(max-width: 740px) {
  .navbar {
    padding: 0 30px;
    margin-top: -20px;
  }

  .mbl-menu {
    display: block;
  }

  .nav {
    position: absolute;
    top: 105px;
    left: 0;
    right: 0;
    width: 100vw;
    height: 0;
    /* background-color: black; */
    background-color: rgba(1, 1, 1, 0.8);
    align-items: center;
    justify-content: center;
    flex-direction: column;
    transition: 0.5s;
    opacity: 0;
    overflow: hidden;
  }

  .nav.show-mbl-menu {
    height: 30vh;
    opacity: 1;
  }

  .logo {
    width: 120px;
  }

  .nav-item a {
    font-size: 16px;
    color: white;
  }
}

