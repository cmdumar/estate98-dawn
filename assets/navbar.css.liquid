@font-face {
  font-family: 'Alternate Gothic Cond ATF';
  src: url('./AlternateGothicCondATF-Bold.woff2') format('woff2'), url('./AlternateGothicCondATF-Bold.woff') format('woff');
  font-weight: bold;
  font-style: normal;
  font-display: swap;
}

.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100vw;
  max-width: 1300px;
  margin: auto;
  padding: 20px 30px 0;
  position: absolute;
  z-index: 20;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  z-index: 999;
}

.nav {
  list-style: none;
  display: flex;
  gap: 15px;
}

.logo {
  padding: 10px 0;
}

.logo img {
  width: 100%;
}

.nav-item a {
  color: #101010;
  font-family: 'Alternate Gothic Cond ATF';
  letter-spacing: 1.2px;
  text-decoration: none;
  font-size: 24px;
  text-transform: uppercase;
  padding-left: 30px;
  display: inline-block;
  transition: all 0.6s;
}

.nav-item a:hover {
  color: var(--clr-theme);
  transform: scale(1.1);
}

.mbl-menu {
  cursor: pointer;
  display: none;
}

.mbl-menu > * {
  width: 24px;
  height: 4px;
  border-radius: 8px;
  margin-bottom: 4px;
  background-color: black;
}

@media(max-width: 740px) {
  .navbar {
    padding: 0 30px;
    /* background-color: rgba(1, 1, 1, 0.5); */
  }

  .mbl-menu {
    display: block;
  }
  .nav {
    position: absolute;
    top: 80px;
    left: 0;
    right: 0;
    width: 100vw;
    height: 0;
    /* background-color: black; */
    background-color: rgba(1, 1, 1, 0.8);
    align-items: center;
    justify-content: center;
    flex-direction: column;
    transition: 0.5s;
    opacity: 0;
    overflow: hidden;
  }

  .nav.active {
    height: 30vh;
    opacity: 1;
  }

  .logo {
    width: 100px;
  }

  .nav-item a {
    font-size: 16px;
    color: white;
  }
}