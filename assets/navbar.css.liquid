@font-face {
  font-family: 'Alternate Gothic Cond ATF';
  src: url('./AlternateGothicCondATF-Bold.woff2') format('woff2'), url('./AlternateGothicCondATF-Bold.woff') format('woff');
  font-weight: bold;
  font-style: normal;
  font-display: swap;
}

.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1300px;
  margin: auto;
  padding: 20px 30px 0;
}

.nav {
  list-style: none;
  display: flex;
  gap: 15px;
}

.logo {
  padding: 10px 0;
}

.nav-item a {
  color: #101010;
  font-family: 'Alternate Gothic Cond ATF';
  letter-spacing: 1.2px;
  text-decoration: none;
  font-size: 24px;
  text-transform: uppercase;
  padding: 10px 15px;
  transition: all 1s;
}

.nav-item a:hover {
  color: var(--clr-theme)
}

