@font-face {
  font-family: 'Alternate Gothic Cond ATF';
  src: url('./AlternateGothicCondATF-Bold.woff2') format('woff2'), url('./AlternateGothicCondATF-Bold.woff') format('woff');
  font-weight: bold;
  font-style: normal;
  font-display: swap;
}

.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100vw;
  max-width: 1600px;
  margin: auto;
  padding: 0 30px 20px;
  position: absolute;
  z-index: 20;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  z-index: 50;
}

.nav {
  list-style: none;
  display: flex;
  gap: 15px;
}

.logo {
  max-width: 148px;
  padding: 10px 0;
}

.logo img {
  width: 100%;
}

.logo-white-mbl {
  display: none;
}

.nav-item {
  padding-left: 30px;
}

.nav-link-white, .nav-link-black{
  font-family: 'Alternate Gothic Cond ATF';
  letter-spacing: 1.2px;
  text-decoration: none;
  font-size: 24px;
  text-transform: uppercase;
  display: inline-block;
  transition: all 0.6s;
}

.nav-link-white {
  color: white;
}

.nav-link-black {
  color: black;
}

.nav-link-black:hover, .nav-link-white:hover {
  color: var(--clr-theme);
  transform: scale(1.1);
}

