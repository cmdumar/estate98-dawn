#background-video {
  width: 100vw;
  height: 100vh;
  object-fit: cover;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: -1;
}

.hero-content {
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 30;
  margin-top: 30px;
  line-height: 1.2;

}

.hero-heading {
  font-family: 'Alternate Gothic Cond ATF';
  color: white;
  opacity: 0.9;
  font-size: 80px;
  margin-bottom: 40px;
  letter-spacing: 1.5px;
  word-spacing: 4px;
}

.hero-subheading {
  font-family: 'AlternateGotNo3D';
  color: #B59357;
  font-size: 50px;
  margin-bottom: 40px;
}

@media(max-width: 640px) {
  .hero-heading {
    font-size: 60px;
    word-spacing: initial;
    letter-spacing: initial;
  }

  .hero-subheading {
    font-size: 45px;
  }
}