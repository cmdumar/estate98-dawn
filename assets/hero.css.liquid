/* landscape tablet */
@media only screen 
  and (min-device-width: 768px) 
  and (max-device-width: 1240px) 
  and (orientation: landscape) 
  and (-webkit-min-device-pixel-ratio: 1) {

    .hero-content {
      top: 60%;
    }
 
    .hero-heading {
      font-size: 44px;
      line-height: 44px;
    }

    .hero-subheading {
      font-size: 36px;
      line-height: 36px;
    }

}

/* mobile landscape */

@media only screen 
  and (min-device-width: 320px) 
  and (max-device-width: 520px)
  and (-webkit-min-device-pixel-ratio: 2)
  and (orientation: landscape) {

    .hero-content {
      top: 70%;
    }

    .hero-heading {
      font-size: 24px;
      line-height: 26px;
    }

    .hero-subheading {
      font-size: 18px;
      line-height: 20px;
    }

}

@media screen 
  and (device-width: 320px) 
  and (device-height: 640px) 
  and (-webkit-device-pixel-ratio: 2) 
  and (orientation: landscape) {

    #background-video {
      min-height: 140vh;
    }

    .hero-content {
      top: 70%;
    }

    .hero-heading {
      font-size: 24px;
      line-height: 26px;
    }

    .hero-subheading {
      font-size: 18px;
      line-height: 20px;
    }
}

*::-webkit-media-controls-start-playback-button {
  display: none !important;
  -webkit-appearance: none;
}