.beverage-container {
  width: 100vw;
  padding: 64px 24px;
}

.beverage {
  margin-bottom: 2rem;
  margin-top: 2rem;
}

.beverage-list p,
.beverage-container p {
  text-align: center;
  font-size: 1.2rem;
  font-family: 'DM Sans';
  font-weight: 400;
  font-size: 16px;
  line-height: 1.5em;
}

.beverage-list {
  margin-top: 3rem;
}

.beverage-list img {
  width: 3rem;
  margin: auto auto 1.5rem;
  height: auto;
}

@media only screen and (min-width: 821px) {
  .beverage-container {
    max-width: 1000px;
    margin: auto;
  }

  .beverage {
    display: flex;
    justify-content: space-between;
  }

  .beverage-list {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 1rem;
  }

  .beverage-list p {
    max-width: 320px;
  }

  .spoon {
    padding-top: 16px;
  };
