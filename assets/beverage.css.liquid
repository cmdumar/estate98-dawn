.beverage-container {
  width: 100%;
  padding: 64px 24px 94px;
}

.video-container {
  max-width: 500px;
  margin: 40px auto;
}

.promo-video {
  width: 100%;
  height: 100%;
}

@media(max-width: 1240px) {
  .video-container {
      height: initial;
  }
}

.beverage {
  margin-bottom: 2rem;
  margin-top: 2rem;
}

.beverage-text,
.beverage-desc {
  text-align: center;
  font-family: 'DM Sans';
  font-weight: 400;
  font-size: 16px;
  line-height: 28px;
}

.beverage-list {
  margin-top: 3rem;
}

.beverage-list img {
  width: 70px;
  margin: 0.5rem auto 1.5rem;
  height: auto;
}

.dollar-img {
  width: 30px !important;
}

.glass-img {
  width: 80px !important;
}

.original-bottle {
  max-width: 575px;
  margin: auto;
}

.original-bottle img {
  margin: auto;
  width: 100%;
  height: auto;
}

.beverage-title-text {
  color: var(--clr-theme);
  font-family: 'AlternateGotNo3D';
  font-size: 30px;
  text-align: center;
  margin: 30px 0 20px ;
}

@media(min-width: 1020px) {
  .beverage-container {
    max-width: 1300px;
    margin: auto;
  }

  .beverage {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
  }

  .beverage-list {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 1rem;
  }

  .beverage-text {
    max-width: 320px;
  }

  .spoon {
    padding-top: 16px;
  };
}