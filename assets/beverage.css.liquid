.beverage-container {
  width: 100%;
  padding: 64px 24px;
}

.beverage {
  margin-bottom: 2rem;
  margin-top: 2rem;
}

.beverage-text,
.beverage-desc {
  text-align: center;
  font-family: 'DM Sans';
  font-weight: 400;
  font-size: 16px;
  line-height: 28px;
}

.beverage-list {
  margin-top: 3rem;
}

.beverage-list img {
  width: 3rem;
  margin: 0.5rem auto 1.5rem;
  height: auto;
}

.original-bottle {
  max-width: 575px;
  margin: auto;
}

.original-bottle img {
  margin: auto;
  width: 100%;
  height: auto;
}

.beverage-title-text {
  color: var(--clr-theme);
  font-family: 'AlternateGotNo3D';
  font-size: 30px;
  text-align: center;
}

@media only screen and (min-width: 1020px) {
  .beverage-container {
    max-width: 1300px;
    margin: auto;
  }

  .beverage {
    display: flex;
    justify-content: space-between;
  }

  .beverage-list {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 1rem;
  }

  .beverage-text {
    max-width: 320px;
  }

  .spoon {
    padding-top: 16px;
  };
}