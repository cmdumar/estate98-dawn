{% assign product = all_products['speciality-ultra-concentrated-coffee'] %}

{% form 'product', product %}
  <div class="product-container">
    <div class="col-2 product-left">
      <img
        src="{{'product5.jpeg' | asset_url}}"
        alt="Coffee Bottle"
        width="500"
        height="450"
        loading="eager"
        id="MainImg"
        class="main-img">
      <div class="multiple-img-container">
        <div class="small-img">
          <img
            src="{{ 'product5.jpeg' | asset_url }}"
            alt=""
            width="142.5"
            height="110"
            loading="eager"
            class="sec-img">
        </div>
        <div class="small-img">
          <img
            src="{{ 'product2.jpeg' | asset_url }}"
            alt=""
            width="142.5"
            height="110"
            loading="eager"
            class="sec-img">
        </div>
        <div class="small-img">
          <img
            src="{{ 'product3.jpeg' | asset_url }}"
            alt=""
            width="142.5"
            height="110"
            loading="eager"
            class="sec-img">
        </div>
        <div class="small-img">
          <img
            src="{{ 'product1.jpeg' | asset_url }}"
            alt=""
            width="142.5"
            height="110"
            loading="eager"
            class="sec-img">
        </div>
      </div>
    </div>

    <div class="col-2 product-right">
      <div class="tab">
        <p class="delivery">AUTO DELIVERY</p>
        <p class="onetime">ONE TIME</p>
      </div>
      <div class="title-container">
        <h1 class="title">Ultra Concentrated Coffee</h1>
        {% comment %} <div class="counter">
        <span class="qty-mbl">Qty</span>
        <span class="minus"><img src="{{ 'minus.svg' | asset_url }}" alt=""></span>
        <input
        type="number"
        name="quantity"
        class="qty"
        id="quantity"
        min="1"
        max="10"
        value="1"
        readonly>
        <span class="plus"><img src="{{ 'plus.svg' | asset_url }}" alt=""></span>
        </div> {% endcomment %}
      </div>
      <div class="reviews">
        <span>(15112 reviews)</span>
        <span>&#9734 &#9734 &#9734 &#9734 &#9734</span>
      </div>
      <p class="money-back">
        30-Day Money-Back Guarantee
      </p>
      <div class="production-container">
        <a class="production" data-tip="Medium Roast">
          <img src="{{'roast.svg' | asset_url }}" alt="roast">
          <span>Roast</span>
        </a>
        <a class="production" data-tip="Honey Processed
        ">
          <img src="{{'process.svg' | asset_url }}" alt="process">
          <span>Process</span>
        </a>
        <a class="production" data-tip="1,650 M.A.S.L">
          <img src="{{'elevation.svg' | asset_url }}" alt="elevation">
          <span>Elevation</span>
        </a>
        <a class="production" data-tip="100% Arabica; Bourbon Varietal
        ">
          <img src="{{'varietal.svg' | asset_url }}" alt="varietal">
          <span>Varietal</span>
        </a>
        <a class="production" data-tip="Milk Chocolate, Mild Tangerine Acidity
        ">
          <img src="{{'notes.svg' | asset_url }}" alt="notes">
          <span>Notes</span>
        </a>
      </div>
      <p class="product-desc">
        Indulge in the ancestral essence of Estate '98, a specialty Ultra Concentrated Coffee (Esencia de Caf√©) meticulously crafted from the finest 100% Strictly High Grown Arabica beans.
      </p>
      <div class="total">
        <span>TOTAL</span>
        <div>
          {% comment %} <span class="dollar-symbol">$</span> {% endcomment %}
          <span class="price-selling-plan">{{ product.variants[0].selling_plan_allocations[0].price | money_without_trailing_zeros }}</span>
          <span class="price-normal">{{ product.price | money_without_trailing_zeros }}</span>
          <span class="month">/MO</span>
        </div>
      </div>
      {% comment %} <div class="coupon">
        <input type="text" placeholder="Enter coupon code here">
        <button class="apply">APPLY</button>
      </div> {% endcomment %}
      <select style="display: none;" name="id">
        <option value="{{ product.variants[0].id }}"></option>
      </select>
      <input
        style="display: none;"
        type="text"
        id="plan"
        name="selling_plan"
        value="{{ product.variants[0].selling_plan_allocations[0].selling_plan.id }}">
      <button type="submit" class="shop-now">
        SHOP NOW
      </button>
    </div>
  </div>

{% endform %}