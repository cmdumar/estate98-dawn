<section>
    <h1 class="mt-12 font-gothic text-5xl text-center uppercase">Our Recipes</h1>
    <div class="mt-12 p-6 mx-auto">
        <div x-data="OurRecipesCarousel" class="splide our-recipes-carousel">
            <div class="splide__track">
                <ul class="splide__list">
                    {% for recipe in shop.metaobjects.recipe.values %}
                        <li class="splide__slide">
                            <a class="cursor-pointer" href="{{ recipe.system.url }}">
                                <div class="relative  w-full h-[400px] bg-gray-100">
                                    <img class="w-full h-full object-cover"
                                         src="{{ recipe.banner_image | img_url: '400x520', crop: 'center' }}"
                                         width="320"
                                         height="400"
                                         alt="Image of {{ recipe.name }}">
                                    <div class=""></div>
                                    <div class="absolute bottom-0 inset-x-0 p-6 h-fit bg-black/50 overflow-hidden">
                                        <p class="text-center text-2xl font-gothic uppercase text-white break-all">{{ recipe.name }}</p>
                                    </div>
                                </div>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</section>
{{ 'our-recipes.js' | asset_url | script_tag }}
